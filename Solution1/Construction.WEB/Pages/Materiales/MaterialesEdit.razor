@page "/materiales/edit/{Id:int}"

@using System.Net
@using Construction.WEB.Repositories
@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService sweetAlertService

<h3>MaterialesEdit</h3>

@if (materiales is null)
{
    <p>Cargando....</p>
}
else
{
    <MaterialesForm Materiales="materiales" OnValidSubmit="Editar" ReturnAction="Return" />
}


@code {
    [Parameter]
    public int Id { get; set; }
    private Material materiales = new();
    private MaterialesForm materialesForm;

    protected override async Task OnParametersSetAsync()
    {
        var responseHttp = await repository.GetAsync<Material>($"api/Materiales/id:int?id={Id}");
        if (responseHttp.Error)
        {
            if (responseHttp.HttpResponseMessage.StatusCode == HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("/materiales");
            }
            else
            {
                var messsage = await responseHttp.GetErrorMessageAsync();
                await sweetAlertService.FireAsync("Error", messsage, SweetAlertIcon.Error);
            }
        }
        else
        {
            materiales = responseHttp.Response;
        }
    }
    private async Task Editar()
    {
        var responseHttp = await repository.PutAsync("/api/Materiales", materiales);
        if (responseHttp.Error)
        {
            var message = await responseHttp.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", message);
            return;
        }

        Return();
        var toast = sweetAlertService.Mixin(new SweetAlertOptions
            {
                Toast = true,
                Position = SweetAlertPosition.BottomEnd,
                ShowConfirmButton = true,
                Timer = 3000
            });
        await toast.FireAsync(icon: SweetAlertIcon.Success, message: "Cambios guardados con éxito.");
    }

    private void Return()
    {
        // proyectoContruccionForn!.FormularioPosteadoConExito = true;
        navigationManager.NavigateTo("/materiales");
    }

}
